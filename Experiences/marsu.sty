	\draw[->] (0,0,0) -- (0,0,3);
}

\newcommand{\reperedeuxd}{		% ~ Repère en deux dimensions
	\draw[->] (0,0) node[left]{$O$} -- (1,0,0) node[below left]{$\ux$};
